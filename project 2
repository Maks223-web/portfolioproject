    <script>
        /* --- 1. 3D TILT EFFECT (НАКЛОН КАРТОЧКИ) --- */
        const card = document.getElementById('tilt-card');
        
        document.addEventListener('mousemove', (e) => {
            if(window.innerWidth < 900) return; // Отключаем на мобильных

            const x = (window.innerWidth / 2 - e.clientX) / 35; // Уменьшил чувствительность
            const y = (window.innerHeight / 2 - e.clientY) / 35;

            card.style.transform = `rotateY(${x}deg) rotateX(${-y}deg)`;
        });

        /* --- 2. CANVAS ЧАСТИЦЫ (СВЕТЛЯЧКИ) --- */
        const canvas = document.getElementById('canvas-bg');
        const ctx = canvas.getContext('2d');

        let width, height;
        let particles = [];

        function resize() {
            width = canvas.width = window.innerWidth;
            height = canvas.height = window.innerHeight;
        }
        window.addEventListener('resize', resize);
        resize();

        class Particle {
            constructor() {
                this.x = Math.random() * width;
                this.y = Math.random() * height;
                this.size = Math.random() * 2 + 0.5; // Размер точек
                this.speedX = Math.random() * 0.6 - 0.3; // Еще медленнее
                this.speedY = Math.random() * 0.6 - 0.3;
                this.color = `rgba(212, 163, 115, ${Math.random() * 0.5 + 0.1})`; // Золотой полупрозрачный
            }
            update() {
                this.x += this.speedX;
                this.y += this.speedY;

                if (this.x > width) this.x = 0;
                if (this.x < 0) this.x = width;
                if (this.y > height) this.y = 0;
                if (this.y < 0) this.y = height;
            }
            draw() {
                ctx.fillStyle = this.color;
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                ctx.fill();
            }
        }

        function initParticles() {
            for (let i = 0; i < 60; i++) {
                particles.push(new Particle());
            }
        }

        function animateParticles() {
            ctx.clearRect(0, 0, width, height);
            for (let i = 0; i < particles.length; i++) {
                particles[i].update();
                particles[i].draw();
            }
            connectParticles();
            requestAnimationFrame(animateParticles);
        }

        function connectParticles() {
            for (let a = 0; a < particles.length; a++) {
                for (let b = a; b < particles.length; b++) {
                    let dx = particles[a].x - particles[b].x;
                    let dy = particles[a].y - particles[b].y;
                    let distance = Math.sqrt(dx * dx + dy * dy);

                    if (distance < 110) {
                        ctx.strokeStyle = `rgba(212, 163, 115, ${0.1 - distance/1100})`;
                        ctx.lineWidth = 0.5;
                        ctx.beginPath();
                        ctx.moveTo(particles[a].x, particles[a].y);
                        ctx.lineTo(particles[b].x, particles[b].y);
                        ctx.stroke();
                    }
                }
            }
        }

        initParticles();
        animateParticles();
    </script>
</body>
