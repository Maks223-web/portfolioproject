    <script>
        const canvas = document.getElementById('matrixCanvas');
        const ctx = canvas.getContext('2d');

        // Устанавливаем размер канваса на весь экран
        function resizeCanvas() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        }
        window.addEventListener('resize', resizeCanvas);
        resizeCanvas();

        // Символы для матрицы (Катакана + Латиница + Цифры)
        const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789アァカサタナハマヤャラワガザダバパイィキシチニヒミリグズヅブプエェケセテネヘメレゲゼデベペオォコソトノホモロョゴゾドボポヴッン';
        const charArray = chars.split('');

        const fontSize = 16;
        let columns = canvas.width / fontSize;

        // Массив для отслеживания Y-координаты каждого столбца
        let drops = [];
        
        // Инициализация капель
        function initDrops() {
            columns = canvas.width / fontSize;
            drops = [];
            for (let i = 0; i < columns; i++) {
                drops[i] = Math.random() * -100; // Начинаем с разной высоты за пределами экрана
            }
        }
        initDrops();
        
        // Пересчет колонок при ресайзе
        window.addEventListener('resize', initDrops);

        function draw() {
            // "Затираем" экран полупрозрачным слоем, чтобы создать эффект следа.
            // Используем светлый цвет (белый с прозрачностью), так как фон у нас светлый градиент.
            // Если использовать черный, градиент "испачкается".
            ctx.fillStyle = 'rgba(230, 230, 230, 0.15)'; 
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            // Настройки текста
            // Серо-зеленый цвет (#4e6e5d) как просили
            ctx.fillStyle = '#4e6e5d'; 
            ctx.font = fontSize + 'px monospace';

            for (let i = 0; i < drops.length; i++) {
                // Выбираем случайный символ
                const text = charArray[Math.floor(Math.random() * charArray.length)];
                
                // Рисуем символ
                ctx.fillText(text, i * fontSize, drops[i] * fontSize);

                // Сброс капли наверх случайным образом после того, как она ушла вниз
                if (drops[i] * fontSize > canvas.height && Math.random() > 0.975) {
                    drops[i] = 0;
                }

                // Двигаем каплю вниз
                drops[i]++;
            }
        }

        // Запуск анимации (30 кадров в секунду для эффекта кино)
        setInterval(draw, 33);

    </script>
</body>
